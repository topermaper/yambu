<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/linearlayout2"
        android:background="@color/transparente">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparente"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_nombre"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="@dimen/normal_text"/>

            <EditText
                android:id="@+id/fname"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:hint="@string/register_hint_nombre"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="@dimen/normal_text">
                <requestFocus/>
            </EditText>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_apellidos"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="@dimen/normal_text"/>

            <EditText
                android:id="@+id/lname"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:hint="@string/register_hint_apellidos"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="@dimen/normal_text"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_email"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="@dimen/normal_text"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:hint="@string/register_hint_email"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="@dimen/normal_text"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:text="@string/register_username"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="@dimen/normal_text"/>


            <EditText
                android:id="@+id/uname"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:hint="Nombre de usuario"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="@dimen/normal_text"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:text="@string/register_password"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="@dimen/normal_text"/>

            <EditText
                android:id="@+id/password"
                android:inputType="textPassword"
                android:hint="@string/register_hint_password"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="@dimen/normal_text"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:text="Repeat Password"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="@dimen/normal_text"/>

            <EditText
                android:id="@+id/repeatpassword"
                android:inputType="textPassword"
                android:hint="@string/register_hint_repeat_password"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:singleLine="true"
                android:textSize="@dimen/normal_text"/>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/register_error"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_above="@+id/linearlayout2"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_gravity="bottom"
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <Button
            android:id="@+id/bktologin"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="@string/button_back"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="@dimen/normal_text"/>

        <Button
            android:id="@+id/register"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="@string/button_ok"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="@dimen/normal_text"/>


    </LinearLayout>
</RelativeLayout><!-- From: file:/C:/Archivos%20de%20programa/Android/AndroidWorkspace/yambu/app/src/main/res/layout/register.xml -->